<div class="modal fade" id="replace-proof-modal" tabindex="-1" role="dialog" aria-labelledby="replace-proof-modal-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= resource_form_with(model: resource, local: true) do |f| %>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.l_select :proof_type_id, available_proof_types,
                             prompt: 'Select Proof Type' %>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              <%= f.file_field :file %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">Replace proof</button>
      </div>
      <% end %>
    </div>
  </div>
</div>
