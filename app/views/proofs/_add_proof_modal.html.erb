<div class="modal fade" id="add-proof-modal" tabindex="-1" role="dialog" aria-labelledby="add-proof-modal-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= resource_form_with(model: resource, local: true) do |f| %>
          <%= render 'shared/form_errors' %>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.l_select :proof_type_id, available_proof_types,
                               prompt: 'Select Proof Type' %>
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                <%= f.file_field :file %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success">Add proof</button>
      </div>
    </div>
  </div>
</div>
