<div class="panel panel-default">
  <div class="panel-heading">
    Capacity pools
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-12 table-responsive">
        <table width="100%" class="table table-striped table-bordered table-hover clickable">
          <thead>
            <tr>
              <th><%= sort_link :name, t('capacity_pool.name') %></th>
              <th><%= sort_link :renew_date, t('capacity_pool.renew_date') %></th>
              <th><%= sort_link :total_channels_count, t('capacity_pool.total_channels_count') %></th>
              <th><%= sort_link :assigned_channels_count, t('capacity_pool.assigned_channels_count') %></th>
              <th><%= sort_link :minimum_limit, t('capacity_pool.minimum_limit') %></th>
              <th><%= sort_link :minimum_qty_per_order, t('capacity_pool.minimum_qty_per_order') %></th>
              <th><%= sort_link :setup_price, t('capacity_pool.setup_price') %></th>
              <th><%= sort_link :monthly_price, t('capacity_pool.monthly_price') %></th>
              <th><%= sort_link :metered_rate, t('capacity_pool.metered_rate') %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'capacity_pool', collection: resources %>
          </tbody>
        </table>
      </div>
    </div>
    <%= render 'shared/pagination' %>
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel -->
