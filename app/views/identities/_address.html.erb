<tr data-url="<%= address_path(address) %>">
  <td><%= address.city_name %></td>
  <td><%= address.postal_code %></td>
  <td><%= address.address %></td>
  <td><%= address.description %></td>
  <td class="text-right text-nowrap">
    <%= show_button address_path(address), :small %>
    <%= edit_button edit_address_path(address), :small %>
    <%= delete_button address_path(address), :small, confirm: 'Are you sure to delete this Address?' %>
  </td>
</tr>
