<div class="panel panel-default">
  <div class="panel-heading">
    Identities
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <%#= render partial: 'filter' %>
    <hr />
    <div class="row text-right">
      <div class="col-lg-12">
        <%= render 'new_identity_button' %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-12 table-responsive">
        <table width="100%" class="table table-striped table-bordered table-hover clickable">
          <thead>
          <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Identity Type</th>
            <th>Phone Number</th>
            <th>Addresses</th>
            <th>Proofs</th>
            <th>Description</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <%= render partial: 'identity', collection: resources %>
          </tbody>
        </table>
      </div>
    </div>
    <%= render 'shared/pagination' %>
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel -->
