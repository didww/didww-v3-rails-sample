<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to 'My Shared Capacity Groups', shared_capacity_groups_path %> >
    <%= resource.name %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <table class="table table-bordered table-condensed">
      <tbody>
        <%= attribute_row :name %>
        <%= attribute_row :capacity_pool, value: capacity_pool_link %>
        <%= attribute_row :shared_channels_count %>
        <%= attribute_row :metered_channels_count %>
        <%= attribute_row :created_at %>
        <tr>
          <td><strong>Dids</strong></td>
          <td>
            <% resource.dids.each do |did| %>
              <%= link_to "#{did.number} - #{area_name(did)}", did_path(did) %>
              <br>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <div class="col-lg-12">
        <%= edit_button edit_shared_capacity_group_path(resource) %>
        <%= delete_button shared_capacity_group_path(resource), confirm: 'Are you sure to delete this Shared Capacity Group?' %>
      </div>
    </div>

  </div>
  <!-- /.panel-body -->
</div>
