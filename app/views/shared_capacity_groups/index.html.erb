<div class="panel panel-default">
  <div class="panel-heading">
    My Capacity Groups
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="row text-right">
      <div class="col-lg-12">
        <%= new_button new_shared_capacity_group_path %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-12 table-responsive">
        <table width="100%" class="table table-striped table-bordered table-hover clickable">
          <thead>
            <tr>
              <th><%= sort_link :name, t('shared_capacity_group.name') %></th>
              <th><%= t 'shared_capacity_group.capacity_pool' %></th>
              <th><%= sort_link :shared_channels_count, t('shared_capacity_group.shared_channels_count') %></th>
              <th><%= sort_link :metered_channels_count, t('shared_capacity_group.metered_channels_count') %></th>
              <th><%= sort_link :created_at, t('shared_capacity_group.created_at') %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: 'shared_capacity_group', collection: resources %>
          </tbody>
        </table>
      </div>
    </div>
    <%= render 'shared/pagination' %>
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel -->
